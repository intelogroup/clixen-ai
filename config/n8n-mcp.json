{
  "server": {
    "mode": "stdio",
    "httpPort": 3001,
    "logLevel": "info"
  },
  "n8n": {
    "docsPath": "../n8n-docs",
    "nodeDatabase": {
      "rebuild": false,
      "cacheExpiry": "24h"
    }
  },
  "features": {
    "nodeSearch": true,
    "intentValidation": true,
    "workflowHealing": true,
    "configValidation": true
  },
  "limits": {
    "maxNodes": 100,
    "maxSearchResults": 20,
    "timeoutMs": 5000
  }
}